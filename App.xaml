        <Style x:Key="ImageBorder" TargetType="Border" >
            <Setter Property="CornerRadius" Value="5"/>
            <!--Setter Property="Background" Value="AntiqueWhite" /-->
            <Setter Property="BorderBrush" Value="Gray"/>
